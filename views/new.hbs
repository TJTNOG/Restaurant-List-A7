<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="請輸入餐廳名稱"
        name="name"
        required
      />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳名稱(英文)<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name_en"
        placeholder="請輸入餐廳名稱(英文)"
        name="name_en"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">餐廳類別<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="請選擇餐廳類別"
        list="categoryOptions"
        name="category"
        required
      />
      <datalist id="categoryOptions">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結<span class="text-danger">*</span></label>
      <input
        type="url"
        class="form-control"
        id="image"
        name="image"
        required
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="location"
        placeholder="請輸入餐廳地址"
        name="location"
        required
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="phone"
        placeholder="請輸入餐廳電話"
        name="phone"
        required
      />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">地圖連結<span class="text-danger">*</span></label>
      <input
        type="url"
        class="form-control"
        id="google_map"
        name="google_map"
        required
      />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="rating"
        min="0"
        max="5"
        step="0.1"
        name="rating"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述<span class="text-danger">*</span></label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        row="3"
        name="description"
        required
      ></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        新增餐廳
      </button>
      <a href="/">
      <button type="button" class="btn btn-outline-secondary">返回首頁</button>
      </a>
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>
  </form>
</div>